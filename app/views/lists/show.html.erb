<div class="container">
  <div class="movie-content">
    <div class="row">
      <div class="col-lg-6">
        <h2><%= @list.name %> Movies</h2>
        <div class="btn-style">
          <p><%= link_to 'Add Movie to List (Create a bookmark)',  new_list_bookmark_path(@list), class: 'btn btn-outline-primary' %></p>
        </div>
       </div>
    </div>

    <hr>

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @list.movies.each do |movie| %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <% movie.bookmarks.each do |bookmark| %>
              <strong>Comment: </strong>
              <p class="card-text"><%= bookmark.comment if bookmark.list_id == @list.id %></p>
            <% end %>
          </div>
            <div class="card-footer">
              <p class="card-text"><%= movie.rating %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

<%= link_to 'Edit', edit_list_path(@list) %>
<%= link_to 'Back', lists_path %>
